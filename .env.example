# Agent Arena Environment Configuration

# Application URL (used for internal API calls during SSR)
NEXT_PUBLIC_URL=http://localhost:3000

# Database path (relative to project root)
DATABASE_PATH=./data/arena.db

# Rate limiting (votes per IP per hour)
VOTE_RATE_LIMIT=10

# Match finalization settings
VOTING_DEADLINE_HOURS=24
MIN_VOTES_FOR_AUTO_FINALIZATION=10

# Security
# Set to true in production
CORS_ENABLED=false
API_KEY_VALIDATION_STRICT=false

# Deployment settings
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0